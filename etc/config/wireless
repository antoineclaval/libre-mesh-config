
config wifi-device 'radio0'
	option type 'mac80211'
	option channel '11'
	option hwmode '11g'
	option path 'platform/ar933x_wmac'
	option htmode 'HT20'
	option disabled '0'
	option distance '10000'

config wifi-iface 'lm_wlan0_ap_radio0'
	option mode 'ap'
	option device 'radio0'
	option ifname 'wlan0-ap'
	option network 'lan'
	option ssid 'LiMe'

config wifi-iface 'lm_wlan0_adhoc_radio0'
	option mode 'adhoc'
	option device 'radio0'
	option ifname 'wlan0-adhoc'
	option network 'lm_wlan0_adhoc'
	option bssid 'ca:fe:00:c0:ff:ee'
	option mcast_rate '24000'
	option ssid 'libre-mesh'

config wifi-iface 'lm_wlan0_ap_named_radio0'
	option mode 'ap'
	option device 'radio0'
	option ifname 'wlan0-ap-named'
	option network 'lan'
	option ssid 'Libre-Mesh/LiMeNode-a3b575'

config wifi-iface 'lm_wlan1_ap_named_radio1'
	option mode 'ap'
	option device 'radio1'
	option ifname 'wlan1-ap-named'
	option network 'lan'
	option ssid 'Libre-Mesh/LiMeNode-a3b575'

